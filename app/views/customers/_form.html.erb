<%= bootstrap_form_for(@customer, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-8") do |f| %>

  <%= f.select :table_id, Table.where(occupied: false).order(:id).map { |e| [e.id, e.id] }, { prompt: "Table id" } %>

  <%= f.select :waiter_id, Waiter.all.order(:id).map { |e| [e.name, e.id] }, { prompt: "Waiter name" } %>

  <%= f.form_group do %>
    <%= f.submit %>
  <% end %>
<% end %>
