<%= render 'layouts/header', title: 'Orders by table' %>

<div class="container-fluid">
  <div class="row">
    <% # Note: The sidebar takes up 3 cols (out of 12) %>
    <%= render 'layouts/sidebar' %>

    <div class="col-lg-9">

      <%= bootstrap_form_tag(url: index_by_table_id_path, method: :get, layout: :horizontal, label_col: "col-lg-3", control_col: "col-lg-3") do |f| %>

        <%= f.select :table_id, Table.all.map { |e| [e.id, e.id] }, { prompt: "Select table", label: "Table to show orders of" } %>

        <%= f.form_group do %>
          <%= f.submit "Show orders" %>
        <% end %>
      <% end %>

      <table class="table table-bordered table-striped">
          <thead>
              <tr>
                  <th>Table id</th>
                  <th>Food</th>
                  <th>Waiter</th>
                  <th>Time</th>
                  <th>Cost</th>
                  <th>Delivered</th>
              </tr>
          </thead>
          <tbody>
              <%= render @orders %>
          </tbody>
      </table>
    </div>
  </div>
</div>
