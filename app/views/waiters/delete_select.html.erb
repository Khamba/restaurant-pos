<%= render 'layouts/header', title: 'Delete Waiter' %>

<div class="container-fluid">
	<div class="row">
		<% # Note: The sidebar takes up 3 cols (out of 12) %>
		<%= render 'layouts/sidebar' %>

		<div class="col-lg-6">
			<table class="table table-bordered table-striped">
          <thead>
              <tr>
                  <th>Name</th>
                  <th>Salary</th>
                  <th>Delete</th>
              </tr>
          </thead>
          <tbody>
            <% @waiters.each do |waiter| %>
              <tr>
							  <td><%= waiter.name %></td>				  
							  <td><span class="glyphicon glyphicon-usd" aria-hidden="true"></span> <%= waiter.salary %></td>
							  <td><%= link_to waiter_path(id: waiter.id), method: :delete do %> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> <% end %></td>
							</tr>
						<% end %>
          </tbody>
		</div>
	</div>
</div>